<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Default" Color="#1F1F1F"/>
    <SolidColorBrush x:Key="Inverse" Color="White"/>
    <SolidColorBrush x:Key="Primary" Color="#007ACC"/>
    <SolidColorBrush x:Key="Info" Color="#1C97EA"/>
    <SolidColorBrush x:Key="Success" Color="#5CB85C"/>
    <SolidColorBrush x:Key="Warning" Color="#F0AD4E"/>
    <SolidColorBrush x:Key="Danger" Color="#F44027"/>

    <!-- Border -->
    <SolidColorBrush x:Key="DefaultBorder" Color="#B6B6B6"/>
    <SolidColorBrush x:Key="HoverBorder" Color="#0078D7"/>
    <SolidColorBrush x:Key="ActiveBorder" Color="#005499"/>
    <SolidColorBrush x:Key="DisableBorder" Color="#DFDFDF"/>

    <!-- Background -->
    <SolidColorBrush x:Key="DefaultBackground" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#E5F1FB"/>
    <SolidColorBrush x:Key="ActiveBackground" Color="#CCE4F7"/>
    <SolidColorBrush x:Key="DisableBackground" Color="#CCCCCC"/>
    
</ResourceDictionary>